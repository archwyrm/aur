# Contributor: Markus Martin <archwyrm@gmail.com>
pkgname=yaml-cpp
pkgver=0.2.5
pkgrel=1
pkgdesc="YAML parser and emitter in C++, written around the YAML 1.2 spec"
url="http://code.google.com/p/yaml-cpp/"
arch=('i686' 'x86_64')
license=('MIT')
source=(http://yaml-cpp.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('b17dc36055cd2259c88b2602601415d9')

build() {
    cd $startdir/src/$pkgname-$pkgver

    cmake . -DCMAKE_INSTALL_PREFIX=/usr -DYAML_CPP_BUILD_TOOLS=0 || return 1
    make || return 1
    make DESTDIR=$startdir/pkg install || return 1
}
